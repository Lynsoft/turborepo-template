# Enable pnpm to hoist dependencies to the root node_modules
# This is important for monorepo setups
auto-install-peers=true

# Strict peer dependencies - helps catch version conflicts early
strict-peer-dependencies=false

# Enable shamefully-hoist for better compatibility with tools that expect flat node_modules
shamefully-hoist=true

# Use pnpm for package management (ensures consistency)
package-manager-strict=true

# Enable public hoist pattern for common packages
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=*turbo*
public-hoist-pattern[]=*biome*

# Disable save-exact to allow for semver ranges
save-exact=false

# Enable legacy peer deps for better compatibility
legacy-peer-deps=false

# Set registry (uncomment and modify if using private registry)
# registry=https://registry.npmjs.org/

# Cache settings for better performance
store-dir=~/.pnpm-store